<% title "#{h @host.name} (#{@muxes.first.try(:os)})" %>
<table>
  <tr>
    <th>Package</th>
    <th>Version</th>
    <th>Arch</th>
    <th>Last changed</th>
  </tr>
  <% for mux in @muxes -%>
    <tr>
      <td><%= link_to mux.package, package_path(mux.package) %></td>
      <td><%= mux.version %></td>
      <td><%= mux.arch %></td>
      <td><%= time_ago_in_words mux.updated_at %></td>
    </tr>
  <% end -%>
</table>
<%= page_entries_info @muxes, :entry_name => "packages" %>
<%= will_paginate @muxes %>

<p>
<%= link_to "View All", hosts_path %>
<span class="pagination">last updated <%= time_ago_in_words @host.updated_at %> ago</span>
</p>
